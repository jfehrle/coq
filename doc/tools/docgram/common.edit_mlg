binders: [
| DELETE Pcoq.Constr.binders  (* todo: not sure why there are 2 "binders:" *)
]

lconstr: [
| DELETE l_constr
]

let_type_cstr: [
| DELETE OPT [ ":" lconstr ]
| type_cstr
